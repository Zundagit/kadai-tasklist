
<h1>タスク一覧</h1>

<table border="1">
    <tr>
        <th>id</th>
        <th>status</th>
        <th>content</th>
    </tr>
    <% @tasks.each do |task|%>
        <tr>
            <td><%=link_to task.id, task_path(task)%></td>
            <td><%=task.status%></td>
            <td><%= task.content %></td>
        </tr>
        
    <%end%>
</table>

<%=link_to '新規タスクの作成', new_task_path %>